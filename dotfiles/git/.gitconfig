[core]
	editor = nvim
[commit]
	verbose = True
[user]
	email = joereynolds952@gmail.com
	name = Joe Reynolds
[alias]
	files = !git diff master --name-only
	vim-files = !nvim $(git files)
        review = !nvim -p $(git files) +\"tabdo Gdiff master\"
[merge]
	tool = meld
[diff]
        external = difft
[difftool]
        prompt = false

[pager]
        difftool = true

[pull]
	rebase = false
[safe]
	directory = /site
